{% extends 'admin/base.html.twig' %}

{% block content %}
    <h1>Modifier un programme ou une formation</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="{{ path('homeAdmin') }}">Tableau de bord</a></li>
        <li class="breadcrumb-item"><a href="{{ path('programsAdmin') }}">Programmes et formations</a></li>
        <li class="breadcrumb-item active">Modifier un programme ou une formation</li>
    </ol>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.img) }}
    {{ form_row(form.teachable_url) }}
    {{ form_row(form.price) }}
    {{ form_row(form.type) }}
    {{ form_row(form.isOnline) }}
    {{ form_end(form) }}
{% endblock %}