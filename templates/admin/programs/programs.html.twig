{% extends 'admin/base.html.twig' %}

{% block content %}
<h1>Programmes</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="{{ path('homeAdmin') }}">Dashboard</a></li>
    <li class="breadcrumb-item active">Programmes</li>
</ol>
<div class="d-flex mb-3">
    <button onclick="location.href='{{path('createProgramAdmin')}}';" class="btn btn-primary ml-auto">Créer un programme</button>
</div>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Liste des programmes
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Url vers Teachable</th>
                    <th>En ligne</th>
                    <th>Image</th>
                    <th>Date de création</th>
                    <th>Date de mise à jour</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Url vers Teachable</th>
                    <th>En ligne</th>
                    <th>Image</th>
                    <th>Date de création</th>
                    <th>Date de mise à jour</th>
                    <th>Actions</th>
                </tr>
                </tfoot>
                <tbody>
                {% for ritual in rituals %}
                    <tr>
                        <td>{{ ritual.title }}</td>
                        <td>{{ ritual.content  | truncate(75, true) | raw}}</td>
                        <td>{{ ritual.price }}€</td>
                        <td><a href="{{ ritual.teachableUrl }}">{{ ritual.teachableUrl }}</a></td>
                        <td>
                            {% if ritual.isOnline == 1 %}
                                Oui
                            {% else %}
                                Non
                            {% endif %}
                        </td>
                        <td>
                            {% if ritual.img %}
                                <img style="max-width:150px" src="{{ asset('uploads/cover_img/'~ritual.img.url) }}"/>
                            {% endif %}
                        </td>
                        <td>{{ritual.createdAt | localizeddate('none', 'none', null, null, 'd MMMM Y')}}</td>
                        <td>{{ritual.updatedAt | localizeddate('none', 'none', null, null, 'd MMMM Y')}}</td>
                        <td>
                            <a  onclick="window.open(this.href);return false" href="{{ path('programOnline', { 'slug': ritual.slug }) }}" class="text-info mr-2" title="Voir"><i class="far fa-eye"></i></a>
                            <a href="{{ path('updateProgramAdmin', {'id':ritual.id}) }}" class="text-primary mr-2" title="Editer"><i class="far fa-edit"></i></a>
                            <p data-title="{{ ritual.title }}" data-id="{{ ritual.id }}" data-toggle="modal" data-target="#deleteModal" class="text-danger" title="Supprimer"><i class="far fa-trash-alt"></i></p>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Etes-vous sûr de vouloir supprimer le programme "<span class="titleValue"></span>" ?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                        <form action="{{ path('deleteProgramAdmin') }}" method="post">
                            <input type="hidden" class="idValue" name="id" value="">
                            <input type="submit" class="btn btn-primary" value="Supprimer"/>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
