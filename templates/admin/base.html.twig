<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "aaSorting": [],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/French.json"
            },
            drawCallback: function () {
                $('div.dataTables_filter input').addClass('form-control');
                $('.dataTables_paginate .previous').addClass('btn btn-light rounded-0');
                $('.dataTables_paginate .paginate_button').addClass('btn btn-light rounded-0');
                $('.dataTables_paginate .next').addClass('btn btn-light rounded-0');
                $('.dataTables_paginate .disabled').addClass('btn btn-light rounded-0 text-muted');
                $('.dataTables_paginate .current').addClass('btn bg-primary rounded-0 text-white');
            }
        });

var images = $('.img_checkbox')

       images.each(function(){
            var file=$( this ).data('flag');
            var assetBaseDir = "{{ asset('uploads/cover_img/') }}";
            var media=assetBaseDir + file;
            $('#image_choice > div').addClass('d-flex flex-wrap');
           $( this ).next('label').css('background', 'url("'+media+'")  no-repeat');
           $( this ).next('label').css('backgroundSize', 'contain');
           $( this ).next('label').css('backgroundPosition', 'center center');
           $( this ).next('label').html('');
           $( this ).change(function() {
               if(this.checked) {
                   $('label').css('border','none');
                  $(this).next('label').css('border', '3px solid grey');
               }
               $('#textbox1').val(this.checked);
           });
        });
    });
</script>
