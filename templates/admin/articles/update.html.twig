{% extends 'admin/base.html.twig' %}

{% block content %}
    <h1>Modifier un article</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="{{ path('homeAdmin') }}">Tableau de bord</a></li>
        <li class="breadcrumb-item"><a href="{{ path('postsAdmin') }}">Articles</a></li>
        <li class="breadcrumb-item active">Modifier un article</li>
    </ol>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.author) }}
    {{ form_row(form.img) }}
    {{ form_row(form.existImage) }}

    {{ form_row(form.category) }}
    {{ form_row(form.categoryNew) }}
    {{ form_row(form.keywords) }}
    {{ form_row(form.isOnline) }}
    {{ form_end(form) }}
{% endblock %}