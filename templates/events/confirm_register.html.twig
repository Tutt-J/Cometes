{% extends 'base.html.twig' %}

{% block title %}Pré-inscription prise en compte | {{ parent() }}{% endblock %}
{% block Titre %}Votre pré-inscription est prise en compte !{% endblock %}
{% block content %}
    <div class="container py-5">
        <div class="row">
            <h2 class="col-12 text-center">Vous êtes bien pré-inscrit à l'évènement "{{ event.Title }}".</h2>
        </div>
            <div class="row list justify-content-around flex-wrap text-center mt-3">

                <article class="item col-12 col-md-4 mb-3 d-flex flex-column align-items-center">
                        <figure  class="d-flex align-items-center text-center w-100 w-md-75 mw-200">
                            <div class="effect"></div>
                            <img class="w-100" src="{{ asset('uploads/cover_img/'~event.img.url) }}" alt="{{ event.img.alt }}">
                        </figure>
                    <div class="infos mt-3 w-100 w-md-75 mw-200">
                        <h2 class="d-initial">{{ event.title | raw }}</h2>
                        <p>
                            {% if event.startDate | date('Ymd') != event.endDate | date('Ymd')%}
                                <strong>Du {{event.startDate | localizeddate('none', 'none', null, null, 'EEEE d MMMM')}} au {{event.endDate | localizeddate('none', 'none', null, null, 'EEEE d MMMM YYYY')}}</strong>
                            {% else %}
                                <strong>{{event.startDate | localizeddate('none', 'none', null, null, 'EEEE d MMMM YYYY')}}</strong>
                            {% endif %}

                        </p>
                    </div>
                </article>
        </div>
    </div>

{% endblock %}