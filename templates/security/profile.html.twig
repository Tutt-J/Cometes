{% extends 'base.html.twig' %}

{% block title %}Mon compte | {{ parent() }}{% endblock %}

{% block Titre %}Mon compte{% endblock %}

{% block content %}
    <div class="container py-5">
        <h1 class="text-center mb-2">Bonjour {{ app.user.firstName }} !</h1>
        <h2 class="text-center mb-4">Que souhaitez-vous faire aujourd'hui ?</h2>
        <div class="row list justify-content-around flex-wrap">
            <div class="item col-12 col-md-6 col-lg-3 mb-5">
                <a class="text-center" href="{{ path('app_account_edit') }}">
                    <figure class="change-ratio">
                        <img class="mw-100" src="{{ asset('build/images/design_compte.jpg') }}" alt="">
                    </figure>
                </a>
                <div class="infos text-center p-2">
                    <h2 class="mt-2 d-initial"><a class="mt-2" href="{{ path('app_account_edit') }}">Éditer mes informations personnelles</a></h2>
