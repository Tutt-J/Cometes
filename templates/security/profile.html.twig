                    <figure class="change-ratio">
                        <img class="mw-100" src="{{ asset('build/images/design_commandes.jpeg') }}" alt="">
                    </figure>
                </a>
                <div class="infos text-center p-2">
                    <h2 class="mt-2 d-initial"><a class="mt-2" href="{{ path('user_purchases') }}">Voir l'historique de mes commandes</a></h2>
                </div>
            </div>
            <div class="item col-12 col-md-6 col-lg-3 mb-5">
                <a class="text-center" href="{{ path('app_account_online_content') }}">
                    <figure class="change-ratio">
                        <img class="mw-100" src="{{ asset('build/images/design_magie.jpeg') }}" alt="">
