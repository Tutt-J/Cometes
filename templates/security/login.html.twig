{% extends 'base.html.twig' %}

{% block title %}Se connecter | {{ parent() }}{% endblock %}

{% block Titre %}Connexion{% endblock %}

{% block content %}
    <div class="container py-5">
        {% if error_login %}
            <div class="alert alert-danger position-relative mb-3">{{ error_login.messageKey|trans(error_login.messageData, 'security') }}</div>
        {% endif %}
        <form method="post">
            <label class="mt-3" for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            <label class="mt-3" for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="mt-3 btn btn-lg btn-primary" type="submit">
                Me connecter
            </button>
        </form>
        <div class="row">
            <a class="col-12 mt-2" href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
            <a class="col-12 mt-2" href="{{ path('app_register') }}">Je n'ai pas encore de compte</a>
        </div>

    </div>

{% endblock %}
