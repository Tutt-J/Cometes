{% extends 'base.html.twig' %}

{% block title %}Se connecter | {{ parent() }}{% endblock %}

{% block Titre %}Réinitialiser mon mot de passe{% endblock %}

{% block content %}
    <div class="container">
        <form method="post">

            <label for="inputPassword" class="mt-3">Nouveau mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
            <label for="inputPasswordBis" class="mt-3">Confirmez le nouveau mot de passe</label>
            <input type="password" name="passwordBis" id="inputPasswordBis" class="form-control" required>
            <input type="hidden" name="token" value="{{ token }}">

            <button class="mt-3 btn btn-lg btn-primary" type="submit">
                Réinitialiser
            </button>
        </form>
    </div>

{% endblock %}
